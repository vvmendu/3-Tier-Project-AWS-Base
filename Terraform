main.tf:
================
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "us-west-2"
}

# VPC (manual - no modules)
resource "aws_vpc" "main" {
  cidr_block           = "10.1.0.0/16"
  enable_dns_hostnames = true
  enable_dns_support   = true

  tags = {
    Name = "3tier-west"
  }
}

# Internet Gateway
resource "aws_internet_gateway" "igw" {
  vpc_id = aws_vpc.main.id

  tags = {
    Name = "3tier-igw-west"
  }
}

# Public Subnets (2 across 2 AZs)
resource "aws_subnet" "public_1a" {
  vpc_id                  = aws_vpc.main.id
  cidr_block              = "10.1.1.0/24"
  availability_zone       = "us-west-2a"
  map_public_ip_on_launch = true

  tags = {
    Name = "public-1a"
  }
}

resource "aws_subnet" "public_1b" {
  vpc_id                  = aws_vpc.main.id
  cidr_block              = "10.1.2.0/24"
  availability_zone       = "us-west-2b"
  map_public_ip_on_launch = true

  tags = {
    Name = "public-1b"
  }
}

# Private Subnets (4)
resource "aws_subnet" "private_app_1a" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.1.101.0/24"
  availability_zone = "us-west-2a"

  tags = {
    Name = "private-app-1a"
  }
}

resource "aws_subnet" "private_app_1b" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.1.102.0/24"
  availability_zone = "us-west-2b"

  tags = {
    Name = "private-app-1b"
  }
}

resource "aws_subnet" "private_web_1a" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.1.103.0/24"
  availability_zone = "us-west-2a"

  tags = {
    Name = "private-web-1a"
  }
}

resource "aws_subnet" "private_web_1b" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.1.104.0/24"
  availability_zone = "us-west-2b"

  tags = {
    Name = "private-web-1b"
  }
}

# DB Subnets
resource "aws_subnet" "db_1a" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.1.201.0/24"
  availability_zone = "us-west-2a"

  tags = {
    Name = "db-1a"
  }
}

resource "aws_subnet" "db_1b" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.1.202.0/24"
  availability_zone = "us-west-2b"

  tags = {
    Name = "db-1b"
  }
}

# NAT Gateway for Private Subnets
resource "aws_eip" "nat" {
  domain = "vpc"
}

resource "aws_nat_gateway" "nat" {
  allocation_id = aws_eip.nat.id
  subnet_id     = aws_subnet.public_1a.id

  tags = {
    Name = "3tier-nat-west"
  }
}

# Route Tables
resource "aws_route_table" "public" {
  vpc_id = aws_vpc.main.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.igw.id
  }

  tags = {
    Name = "public-rt-west"
  }
}

resource "aws_route_table_association" "public_1a" {
  subnet_id      = aws_subnet.public_1a.id
  route_table_id = aws_route_table.public.id
}

resource "aws_route_table_association" "public_1b" {
  subnet_id      = aws_subnet.public_1b.id
  route_table_id = aws_route_table.public.id
}

resource "aws_route_table" "private" {
  vpc_id = aws_vpc.main.id

  route {
    cidr_block     = "0.0.0.0/0"
    nat_gateway_id = aws_nat_gateway.nat.id
  }

  tags = {
    Name = "private-rt-west"
  }
}

resource "aws_route_table_association" "private_app_1a" {
  subnet_id      = aws_subnet.private_app_1a.id
  route_table_id = aws_route_table.private.id
}

resource "aws_route_table_association" "private_app_1b" {
  subnet_id      = aws_subnet.private_app_1b.id
  route_table_id = aws_route_table.private.id
}

# ... (Security Groups, ALB, EC2, RDS from previous main.tf - add them here)
# External ALB, Web EC2 (2), App EC2 (2), RDS MySQL in db subnets

# ========== SECURITY GROUPS (Your Diagram) ==========
resource "aws_security_group" "public_alb_sg" {
  name_prefix = "public-alb-"
  vpc_id      = aws_vpc.main.id

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "External-ALB-SG-west"
  }
}

resource "aws_security_group" "web_sg" {
  name_prefix = "web-"
  vpc_id      = aws_vpc.main.id

  ingress {
    from_port       = 80
    to_port         = 80
    protocol        = "tcp"
    security_groups = [aws_security_group.public_alb_sg.id]
  }

  egress {
    from_port   = 8080
    to_port     = 8080
    protocol    = "tcp"
    cidr_blocks = [aws_vpc.main.cidr_block]
  }

  tags = {
    Name = "Web-SG-west"
  }
}

resource "aws_security_group" "app_sg" {
  name_prefix = "app-"
  vpc_id      = aws_vpc.main.id

  ingress {
    from_port       = 8080
    to_port         = 8080
    protocol        = "tcp"
    security_groups = [aws_security_group.web_sg.id]
  }

  egress {
    from_port   = 3306
    to_port     = 3306
    protocol    = "tcp"
    cidr_blocks = [aws_vpc.main.cidr_block]
  }

  tags = {
    Name = "App-SG-west"
  }
}

resource "aws_security_group" "db_sg" {
  name_prefix = "db-"
  vpc_id      = aws_vpc.main.id

  ingress {
    from_port       = 3306
    to_port         = 3306
    protocol        = "tcp"
    security_groups = [aws_security_group.app_sg.id]
  }

  tags = {
    Name = "DB-SG-west"
  }
}

# ========== EXTERNAL LOAD BALANCER (Internet Facing) ==========
resource "aws_lb" "external" {
  name               = "3tier-external-west"
  internal           = false
  load_balancer_type = "application"
  security_groups    = [aws_security_group.public_alb_sg.id]
  subnets            = [aws_subnet.public_1a.id, aws_subnet.public_1b.id]

  tags = {
    Name = "External-LB-west"
  }
}

resource "aws_lb_target_group" "frontend_tg" {
  name     = "frontend-tg-west"
  port     = 80
  protocol = "HTTP"
  vpc_id   = aws_vpc.main.id

  health_check {
    enabled             = true
    healthy_threshold   = 2
    interval            = 30
    matcher             = "200-299"
    path                = "/"
    port                = "traffic-port"
    protocol            = "HTTP"
    unhealthy_threshold = 3
  }

  tags = {
    Name = "Frontend-TG-west"
  }
}

resource "aws_lb_listener" "external" {
  load_balancer_arn = aws_lb.external.arn
  port              = 80
  protocol          = "HTTP"

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.frontend_tg.arn
  }
}


# ========== SESSION MANAGER (AWS Systems Manager) ==========
resource "aws_iam_role" "ssm_role" {
  name = "3tierSSMRoleWest"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [{
      Action = "sts:AssumeRole"
      Effect = "Allow"
      Principal = {
        Service = "ec2.amazonaws.com"
      }
    }]
  })
}

resource "aws_iam_role_policy_attachment" "ssm_policy" {
  role       = aws_iam_role.ssm_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore"
}

resource "aws_iam_role_policy_attachment" "ssm_cloudwatch" {
  role       = aws_iam_role.ssm_role.name
  policy_arn = "arn:aws:iam::aws:policy/CloudWatchAgentServerPolicy"
}

resource "aws_iam_instance_profile" "ssm_profile" {
  name = "3tierSSMProfileWest"
  role = aws_iam_role.ssm_role.name
}


# ========== SSH KEY PAIR ==========
resource "aws_key_pair" "tier3_ssh" {
  key_name   = "three-tier-project-key"           # Your exact name
  public_key = file("${path.module}/three-tier-project-key.pub")  # Matches .pub

  tags = {
    Name = "Three-Tier-West-SSH-Key"
  }
}



# ========== WEB INSTANCES (Frontend Tier - 2 instances) ==========
resource "aws_instance" "web_1a" {
  ami                    = "ami-055a9df0c8c9f681c"  # Amazon Linux 2023 us-west-2
  instance_type          = "t3.micro"
  subnet_id              = aws_subnet.private_web_1a.id
  vpc_security_group_ids = [aws_security_group.web_sg.id]
  iam_instance_profile   = aws_iam_instance_profile.ssm_profile.name
  key_name               = aws_key_pair.tier3_ssh.key_name
  
  user_data = base64encode(<<-EOF
    #!/bin/bash
    yum update -y
    yum install -y httpd python3 git
    systemctl start httpd
    systemctl enable httpd
    echo "<h1>Web Server 1A - $(hostname)</h1><p>External LB → Web → App → RDS</p>" > /var/www/html/index.html
    EOF
  )

  tags = {
    Name = "Web-1A-west"
  }
}

resource "aws_instance" "web_1b" {
  ami                    = "ami-055a9df0c8c9f681c"
  instance_type          = "t3.micro"
  subnet_id              = aws_subnet.private_web_1b.id
  vpc_security_group_ids = [aws_security_group.web_sg.id]
  iam_instance_profile   = aws_iam_instance_profile.ssm_profile.name
  key_name               = aws_key_pair.tier3_ssh.key_name
  
  user_data = base64encode(<<-EOF
    #!/bin/bash
    yum update -y
    yum install -y httpd python3 git
    systemctl start httpd
    systemctl enable httpd
    echo "<h1>Web Server 1B - $(hostname)</h1><p>Your 3-Tier Architecture Works!</p>" > /var/www/html/index.html
    EOF
  )

  tags = {
    Name = "Web-1B-west"
  }
}

# Register Web instances to Target Group
resource "aws_lb_target_group_attachment" "web_1a" {
  target_group_arn = aws_lb_target_group.frontend_tg.arn
  target_id        = aws_instance.web_1a.id
  port             = 80
}

resource "aws_lb_target_group_attachment" "web_1b" {
  target_group_arn = aws_lb_target_group.frontend_tg.arn
  target_id        = aws_instance.web_1b.id
  port             = 80
}

# ========== APP INSTANCES (Backend Tier - 2 instances) ==========
resource "aws_instance" "app_1a" {
  ami                    = "ami-055a9df0c8c9f681c"
  instance_type          = "t3.micro"
  subnet_id              = aws_subnet.private_app_1a.id
  vpc_security_group_ids = [aws_security_group.app_sg.id]
  iam_instance_profile   = aws_iam_instance_profile.ssm_profile.name
  key_name               = aws_key_pair.tier3_ssh.key_name
  
  user_data = base64encode(<<-EOF
    #!/bin/bash
    yum update -y
    yum install -y httpd python3 git
    systemctl start httpd
    systemctl enable httpd
    echo "<h1>App Server 1A - $(hostname)</h1><p>Connected to RDS MySQL</p>" > /var/www/html/index.html
    EOF
  )

  tags = {
    Name = "App-1A-west"
  }
}

resource "aws_instance" "app_1b" {
  ami                    = "ami-055a9df0c8c9f681c"
  instance_type          = "t3.micro"
  subnet_id              = aws_subnet.private_app_1b.id
  vpc_security_group_ids = [aws_security_group.app_sg.id]
  iam_instance_profile   = aws_iam_instance_profile.ssm_profile.name
