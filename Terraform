# ========== RDS MYSQL DATABASE ==========
resource "aws_db_subnet_group" "main" {
  name       = "3tier-db-west"
  subnet_ids = [aws_subnet.db_1a.id, aws_subnet.db_1b.id]

  tags = {
    Name = "3Tier-DB-SubnetGroup-west"
  }
}

resource "aws_db_instance" "main" {
  identifier              = "db-west-01"
  engine                  = "mysql"
  engine_version          = "8.0"
  instance_class          = "db.t3.micro"
  allocated_storage       = 20
  max_allocated_storage   = 100
  storage_type            = "gp2"
  db_subnet_group_name    = aws_db_subnet_group.main.name
  vpc_security_group_ids  = [aws_security_group.db_sg.id]
  username                = "admin"
  password                = "SecurePass123!"
  skip_final_snapshot     = true
  publicly_accessible     = false
  backup_retention_period = 1

  tags = {
    Name = "db-west-01-3Tier-RDS-west"
  }
}

# ========== OUTPUTS ==========
output "external_lb_dns" {
  value = aws_lb.external.dns_name
}

output "vpc_id" {
  value = aws_vpc.main.id
}

output "private_subnets" {
  value = [aws_subnet.private_web_1a.id, aws_subnet.private_web_1b.id, aws_subnet.private_app_1a.id, aws_subnet.private_app_1b.id]
}
